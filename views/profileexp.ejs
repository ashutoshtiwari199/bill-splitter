<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title><%= currentuser, %> Page</title>
</head>
<body>
    <nav  class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">ExpenseBook</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" style="text-transform: capitalize;" aria-current="page" href="#">Hello, <%= currentuser%></a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">ExpenseName</a>
                <ul class="dropdown-menu">
                  <% expensename.forEach(function(val){%>
                    <li><a href="/profile/<%=val._id %>" onclick="selectexpense(`<%= val._id %>`)" class=" dropdown-item" type="" name="expense" title="kkkk"
                      value="<%= val.expensename %>"><%= val.expensename %></a>
                  </li>
                <% }) %>
  
                </ul>
              </li>
            
              <li class="nav-item">
                <a class="nav-link " href="#" tabindex="-1" aria-disabled="true"><%= currentselectedexpense %></a>
              </li>
              <li class="nav-item">
                <!-- **********This function is generating error in saving the object in localstorage because 
            add event listener will applicable on null if not a admin -->
                <input type="hidden" class="username" placeholder="this is jugaad for below function" >
                <% if(isAdmin===true){ %>
                <form action="/adduser" method="POST" id="myForm" class="d-flex">
                    <input class="dd" type="hidden" name="localstorage">
                  <input class="form-control me-2 " id="username" class="username" name="username" type="search" placeholder="Add Member..." aria-label="Search">
                  <button class="btn btn-outline-success btn-sm" type="submit">+</button>
                </form>
                <% } else{ %>
                  <h6 style="display: none;"></h6>
                <% } %>
              </li>
            </ul>
            <form action="/createexpense" method="POST" class="d-flex">
                <input class="form-control me-2 " name="expensename" type="search" placeholder="Create New Expense..." aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Create</button>
              </form>
              <a href="/logout"><button class="btn m-lg-1 btn-outline-success" type="submit">Logout</button></a>
          </div>
        </div>
      </nav> 
      <table class="table">
        <tbody>
          <tr class="d-flex justify-content-around">
            <td>Total expense:- <%= total %></td>
            <td>MyContribution:- <%= personalexp %></td>
          </tr>
          
        </tbody>
      </table>
      
      
      <form class=""  action="/addtransaction" method="POST">
        <input id="dd" class="dd" type="hidden"  name="localstorage">
        <input type="text" min="3" class="m-1" name="goodsname" placeholder="GoodsName...">
        <input type="number" min="0" class="m-1" name="amount" placeholder="₹ ">
        <input type="submit" class="m-1">
      </form>
  
      <table class="mt-5 table table-striped">
        <thead>
          <tr>
            <th scope="col">Date</th>
            <th scope="col">Name</th>
            <th scope="col">GoodsName</th>
            <th scope="col">Amount</th>
            <th scope="col">Modify</th>
          </tr>
        </thead>
        <tbody>
        <% goods.forEach(function(val){ %>
          <tr>
            <td><%= val.date %></td>
            <td><%= val.spentby %></td>
            <td><%= val.goods %></td>
            <td>₹ <%= (val.amount) %></td>
            <% if(val.spentby===currentuser){ %>
                <td><a href="/delete/<%= val.txnId%>/<%= expenseid._id%>"><i class="fa fa-trash-alt"></i></a></td>
                        <% } else {%>
              <td><i class="fa fa-check-double"></i></td>
            <% } %>
          </tr>
          <% }) %>
        </tbody>
      </table>

      <!-- update form modal -->

      <div class="modal fade" id="updatetxn" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Login</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="login" method="POST">
                <div class="mb-3">
                  <label for="exampleInputEmail1"  class="form-label">UserName</label>
                  <input type="text" class="form-control" name="username" id="exampleInputEmail1" aria-describedby="emailHelp">
                  <div id="emailHelp" class="form-text">We'll share your Everything.</div>
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Password</label>
                  <input oninput="passwordlength()" name="password" type="password" class="form-control" id="exampleInputPassword1">
                </div>
                <button type="submit" class="btn btn-primary container-fluid">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      

      <script>

        document.querySelector('.dd').value = localStorage.getItem("expense")
        document.querySelector('#dd').value = localStorage.getItem("expense")

        
        function selectexpense(val) {
          document.querySelector('.dd').value = val; 
            localStorage.setItem("expense", val);
            console.log("from Localstorage  " + localStorage.getItem("expense"))
        }
        
        function myfunction(){
            if(localStorage.getItem("expense")!= null){
                location.replace(`http://localhost:3000/profile/${localStorage.getItem("expense")}`);
            }
        }


            </script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>


</body>
</html>